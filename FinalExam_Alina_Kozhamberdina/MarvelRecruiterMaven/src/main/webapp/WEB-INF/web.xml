<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>filepath</param-name>
        <param-value>/WEB-INF/applicants.txt</param-value>
    </context-param>
    <servlet>
        <servlet-name>InfoCollector</servlet-name>
        <servlet-class>controller.InfoCollector</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DecisionMaker</servlet-name>
        <servlet-class>controller.DecisionMaker</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InfoCollector</servlet-name>
        <url-pattern>/InfoCollector</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DecisionMaker</servlet-name>
        <url-pattern>/DecisionMaker</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error-404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error-java.jsp</location>
    </error-page>
</web-app>
